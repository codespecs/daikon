    /** @return a new RatPoly, r, such that r = "this - p". */
    public RatPoly sub(RatPoly p) {
        // IMPL IS STAFF ONLY
        checkRep();
        if (this.isNaN()) {
            checkRep();
            return this;
        }
        if (p.isNaN()) {
            checkRep();
            return p;
        }
        checkRep();
        return this.add(p.negate());
    }

    /*@ requires p != null; */
    /*@ requires p.terms != null; */
    /*@ requires p.terms.wrapped != null; */
    /*@ requires p.terms.wrapped.containsNull == false; */
    /*@ requires p.terms.wrapped.elementType == \type(PolyCalc.RatTerm); */
