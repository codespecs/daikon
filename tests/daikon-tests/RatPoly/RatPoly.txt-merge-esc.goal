    /*@ requires p.terms != null; */
    /*@ requires p.terms.wrapped != null; */
    /*@ requires p.terms.wrapped.containsNull == false; */
    /*@ requires p.terms.wrapped.elementType == \type(PolyCalc.RatTerm); */
